// Colors
neutral = #f5f5f5
primary = #6c5ce7

// Shorthand for font-family with fallbacks
megrim = 'Megrim', 'Poppins', sans-serif
poppins = 'Poppins', sans-serif


// Used on most pages to set padding of root element
container()
  width 100%
  height 100vh
  +mobile()
    padding 2rem 1rem
  +atMobile()
    padding 2rem 5rem
  +atTablet()
    padding 4rem 8rem
  +atDesktop()
    padding 4rem 15rem